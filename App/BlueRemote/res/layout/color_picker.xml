<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_color_picker"
       	/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >
		
		<TextView
            android:id="@+id/textView_14_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            
            android:text="@string/alpha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        
        <SeekBar
            android:id="@+id/seekBar_4_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_14_color_picker"
            android:max="255"
            />
        
        <TextView
            android:id="@+id/textView_1_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/red"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/seekBar_4_color_picker"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light" />

        <SeekBar
            android:id="@+id/seekBar_1_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_1_color_picker"
            android:max="255"
            />

        <TextView
            android:id="@+id/textView_2_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar_1_color_picker"
            android:text="@string/green"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/holo_green_light"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/seekBar_2_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_2_color_picker"
            android:max="255"
            />

        <TextView
            android:id="@+id/textView_3_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar_2_color_picker"
            android:text="@string/blue"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/holo_blue_light"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/seekBar_3_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_3_color_picker"
            android:max="255"
            />
		
        <TextView
            android:id="@+id/textView_13_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar_3_color_picker"
            android:gravity="center"
            android:text="@string/hashFFFFFFFF"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_color_picker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_13_color_picker"
            android:layout_centerHorizontal="true"
            android:text="@string/ok" />

        <TextView
            android:id="@+id/textView_4_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_1_color_picker"
            android:layout_alignBottom="@+id/textView_1_color_picker"
            android:layout_centerHorizontal="true"
            android:text="@string/two_five_five"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/textView_6_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_3_color_picker"
            android:layout_alignBottom="@+id/textView_3_color_picker"
            android:layout_centerHorizontal="true"
            android:text="@string/two_five_five"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/textView_5_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_2_color_picker"
            android:layout_alignBottom="@+id/textView_2_color_picker"
            android:layout_centerHorizontal="true"
            android:text="@string/two_five_five"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textView_7_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_4_color_picker"
            android:layout_alignBottom="@+id/textView_4_color_picker"
            android:layout_alignParentRight="true"
            android:text="@string/FF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/textView_8_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_5_color_picker"
            android:layout_alignBottom="@+id/textView_5_color_picker"
            android:layout_alignParentRight="true"
            android:text="@string/FF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/textView_9_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_6_color_picker"
            android:layout_alignBottom="@+id/textView_6_color_picker"
            android:layout_alignParentRight="true"
            android:text="@string/FF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/textView_10_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_7_color_picker"
            android:layout_toLeftOf="@+id/textView_7_color_picker"
            android:text="@string/hash"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light" />
        
        <TextView
            android:id="@+id/textView_11_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_8_color_picker"
            android:layout_toLeftOf="@+id/textView_8_color_picker"
            android:text="@string/hash"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_light" />
        
        <TextView
            android:id="@+id/textView_12_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_9_color_picker"
            android:layout_toLeftOf="@+id/textView_9_color_picker"
            android:text="@string/hash"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/textView_15_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_14_color_picker"
            android:layout_alignBottom="@+id/textView_14_color_picker"
            android:layout_centerHorizontal="true"
            android:text="@string/two_five_five"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_16_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_14_color_picker"
            android:layout_alignBottom="@+id/textView_14_color_picker"
            android:layout_alignParentRight="true"
            android:text="@string/FF"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_17_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_16_color_picker"
            android:layout_toLeftOf="@+id/textView_16_color_picker"
            android:text="@string/hash"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

</RelativeLayout>
